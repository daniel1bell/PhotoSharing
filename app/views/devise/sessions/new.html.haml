.square_viewport
  .standard_group
    #signin_options
      .long_short.text_square
        %h3 "Sign up, sign in, let us begin..."
      
      %a{href: user_omniauth_authorize_path('twitter')}
        .standard_square.sprite-twitter.has-tip{"data-tooltip" => "", "data-options" => "disable_for_touch:true", title: "Sign in using Twitter"}
      
      %a{href: user_omniauth_authorize_path('facebook')}
        .standard_square.sprite-facebook.has-tip{"data-tooltip" => "", "data-options" => "disable_for_touch:true", title: "Sign in using Facebook"}
      
      %button#show_email_signin
        .standard_square.sprite-email.has-tip{"data-tooltip" => "", "data-options" => "disable_for_touch:true", title: "Sign in using your email"}
      
      %a{href: new_user_registration_path}
        .standard_square.sprite-signup.has-tip{"data-tooltip" => "", "data-options" => "disable_for_touch:true", title: "Sign up for a new account"}
    
    .long_short#email_signin_box
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        %div
          = f.email_field :email, autofocus: true, placeholder: "E-Mail Address"
        %div
          = f.password_field :password, autocomplete: "off", placeholder: "Password"
        - if devise_mapping.rememberable?
          %div
            = f.check_box :remember_me
            = f.label :remember_me
        %div
          = f.submit "Sign in", class: "button tiny expand"
          %a.password_forgot{href: new_user_password_path} Forgot your password?