%h1 
  = @picture.name
  = raw picture.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
  = image_tag @picture.picture_image.url
%ul
  %li
    = link_to('Edit Picture', edit_picture_path)
    = link_to('Delete Picture', @picture, :method => :delete, :confirm => 'Are you sure?')
    = link_to('Back', pictures_path)