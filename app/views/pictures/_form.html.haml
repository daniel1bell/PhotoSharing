= form_for([@album, @picture]) do |f|
  .field
    = f.label :name
    %br/
    = f.text_field :name, :autofocus => true, placeholder: 'Name'
  .field
    = f.label :picture_image
    %br/
    = f.file_field :picture_image, :multiple => true
  .field
    = f.label :tag_list, "Tags (separated by commas)"
    %br/
    = f.text_field :tag_list   
  .actions
    = f.submit
