#search
  = form_tag("/search_results", method: :get, remote: true, id: :search_form) do
    = label_tag(:search, "Search for:")
    = text_field_tag(:search)
    = submit_tag("Search")

%ul#pictures
  = render @pictures

#tag_cloud
  - tag_cloud Picture.tag_counts, %w[s m l] do |tag, css_class| 
    = link_to tag.name, tag_path(tag.name), class: css_class
