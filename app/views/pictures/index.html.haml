= link_to('New Picture', new_picture_path)

.tag_cloud
  - tag_cloud Picture.tag_counts, %w[s m l] do |tag, css_class| 
    = link_to tag.name, tag_path(tag.name), class: css_class
%ul
  - @pictures.each do |picture|
    %li
      .album
        = link_to(picture.name, picture_path(picture), class: "picture-name")
        = raw picture.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')