.long_short
  = form_for @album do |f|
    .field
      = f.text_field :name, :autofocus => true, placeholder: 'Name'
    .field
      = f.text_area :description, placeholder: 'Description'

      = f.hidden_field :user_id, value: current_user.id

    .actions
      = f.submit "Create Album", class: "button tiny expand"